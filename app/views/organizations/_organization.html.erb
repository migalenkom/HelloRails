
    <li class="row list-group-item" id="<%= organization.id %>">

      <div class="col-sm-4"><%= link_to organization.name, organization_projects_path(organization) %></div>
      <div class="col-sm-4"><%= organization.description %></div>

      <div class="col-sm-4">

         <div class="col-sm-6"> <%= link_to t('.edit', :default => t("helpers.links.edit")),
                                                edit_organization_path(organization),remote: true ,:id => 'editOrganization',:class => 'btn btn-mini glyphicon glyphicon-pencil' %></div>


              <div class="col-sm-6"><%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                                                organization_path(organization),
                                                :method => :delete,
                                                remote: true,
                                                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                                                :class => 'btn btn-mini glyphicon glyphicon-remove' %></div>

      </div>

    </li>