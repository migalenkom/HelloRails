    <li class="row list-group-item" id="<%= organization.id %>">

      <div class="col-sm-3"><%= link_to organization.name, organization_projects_path(organization) %></div>
      <div class="col-sm-3"><%= organization.description %></div>
      <div class="col-sm-3"><%= link_to "Members", organization_members_path(organization) %></div>
      <div class="col-sm-3">

        <% if allow? :organizations, :edit, organization %> <div class="col-sm-6"> <%= link_to "",
                                                edit_organization_path(organization),remote: true ,:id => 'editOrganization',:class => 'btn btn-mini glyphicon glyphicon-pencil' %></div>
        <%end%>

        <% if allow? :organizations, :destroy, organization %> <div class="col-sm-6"><%= link_to "",
                                                organization_path(organization),
                                                :method => :delete,
                                                remote: true,
                                                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                                                :class => 'btn btn-mini glyphicon glyphicon-remove' %></div>
        <%end%>
      </div>
    </li>