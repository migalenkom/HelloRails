<li class="row list-group-item" id="<%= member.id %>">

  <div class="col-sm-3"><%= member.name %></div>

  <%if allow? :members, :destroy, organization %> <div class="col-sm-6"><%= link_to "",
                                                                                           organization_member_path(params[:organization_id],member),
                                                                                           :method => :delete,
                                                                                           remote: true,
                                                                                           :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                                                                                           :class => 'btn btn-mini glyphicon glyphicon-remove' %></div>
  <%end%>

</li>