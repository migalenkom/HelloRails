<li class="row list-group-item" id="<%= config.id %>">

  <div class="col-sm-3"><%= link_to config.name, api_config_path(config) %></div>
  <div class="col-sm-3"><%= config.key %></div>
  <div class="col-sm-3">

    <% #if allow? :config, :edit, config %>
    <div class="col-sm-6">
    <%= link_to "",
                   edit_api_config_path(config),remote: true ,:id => 'editConfig', data:{toggle:"popover",container:"body"},:class => 'btn btn-mini glyphicon glyphicon-pencil' %></div>
    <%#end%>

    <% #if allow? :config, :destroy, config %>
        <div class="col-sm-6">
          <%= link_to "", api_config_path(config),
                          :method => :delete,
                          remote: true,
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                          :class => 'btn btn-mini glyphicon glyphicon-remove' %> </div>
    <%#end%>
  </div>
</li>