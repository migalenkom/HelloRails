<div id="modal-edit-user">
<%= simple_form_for @user, remote: true, :html =>{ :class => 'form-horizontal', :multipart => true  } do |f| %>
    <%= f.input :name %>
    <%= f.input :email, placeholder: 'user@domain.com' %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
      <%= tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token) %>
      <% if allow_param? :user, :isAdmin  %>
          <%= f.input :isAdmin %>
    <%end%>

    <%= f.file_field :avatar%>

      <div class="modal-footer">
        <a href="#" class="btn btn-danger btn-lg" data-dismiss="modal" >Close</a>
        <%= f.button :submit, class: 'btn btn-success btn-lg' %>
      </div>
<% end %>
</div>